<header>
    <nav class="navbar navbar-dark navbar-expand fixed-top nav-masthead">
        <div class="container">    
            <%= link_to "Secret Lodge", root_url, class: 'navbar-brand' %>
            <ul class="navbar-nav ml-auto">
                <% if logged_in? %>
                    <li class="nav-item navbar-text">
                        <%= "Salute, " + current_user.name + "!" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Log out", logout_path, method: :delete, class: 'nav-link active px-0 ml-2' %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to "Log in", login_path, class: 'nav-link active px-0 ml-2' %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>
